{
    "name": "convex-panel-monorepo",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --concurrency=11",
        "dev:panel-only": "turbo dev --filter=web --filter=nextjs-web --filter=convex-panel --filter=@repo/backend --filter=convex-panel/api --concurrency=11",
        "dev:vite-only": "turbo dev --filter=web --filter=convex-panel --filter=@repo/backend --filter=convex-panel/api --concurrency=11",
        "dev:nextjs-only": "turbo dev --filter=nextjs-web --filter=convex-panel --filter=@repo/backend --filter=convex-panel/api --concurrency=11",
        "dev:svelte-only": "turbo dev --filter=svelte-web --filter=convex-panel --filter=@repo/backend --filter=convex-panel/api --concurrency=11",
        "dev:vue-only": "turbo dev --filter=vue-web --filter=convex-panel --filter=@repo/backend --filter=convex-panel/api --concurrency=11",
        "lint": "turbo run lint",
        "test": "turbo run test",
        "clean": "turbo run clean",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "devDependencies": {
        "prettier": "^3.5.2",
        "turbo": "^2.4.2",
        "typescript": "^5.9.3"
    },
    "packageManager": "pnpm@10.24.0"
}