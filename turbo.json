{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "env": [
        "CONVEX_CLIENT_SECRET",
        "CONVEX_ACCESS_TOKEN",
        "CONVEX_DEPLOY_KEY",
        "LOOPS_API_KEY",
        "VITE_OAUTH_CLIENT_ID",
        "VITE_CONVEX_URL",
        "VITE_CONVEX_TOKEN_EXCHANGE_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}