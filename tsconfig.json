{
    "compilerOptions": {
        "target": "es2015",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@convex-panel/shared": [
                "./packages/shared/src"
            ],
           "@convex-panel/panel": [
                "./packages/panel/src"
            ],
            "@convex-panel/convex-component": [
                "./packages/convex-component/src"
            ]
        }
    },
    "files": [],
    "references": [
        {
            "path": "./packages/panel"
        },
        {
            "path": "./packages/shared"
        },
        {
            "path": "./packages/convex-component"
        },
        {
            "path": "./apps/chrome-extension"
        },
        {
            "path": "./apps/edge-extension"
        },
        {
            "path": "./apps/firefox-extension"
        },
        {
            "path": "./apps/desktop"
        }
    ]
}