{
    "manifest_version": 3,
    "name": "Convex Panel",
    "version": "1.0.0",
    "description": "Convex DevTools Panel",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}