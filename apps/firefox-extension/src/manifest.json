{
    "manifest_version": 3,
    "name": "Convex Panel",
    "version": "1.0.0",
    "description": "Convex DevTools Panel",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "action": {
        "default_popup": "src/popup/index.html"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "convex-panel@robertalvarez.dev",
            "strict_min_version": "109.0"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}