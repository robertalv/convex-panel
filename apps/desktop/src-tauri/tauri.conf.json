{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Convex Panel",
  "version": "0.3.2",
  "identifier": "dev.convexpanel.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    },
    "windows": [
      {
        "title": "",
        "label": "main",
        "width": 960,
        "height": 600,
        "minWidth": 960,
        "minHeight": 600,
        "maxWidth": 960,
        "maxHeight": 600,
        "resizable": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "center": true,
        "devtools": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "DeveloperTool",
    "shortDescription": "Debug and monitor Convex applications",
    "longDescription": "Convex Panel is a powerful debugging and monitoring tool for Convex applications. View logs, inspect data, run functions, and monitor performance in real-time.",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "exceptionDomain": null,
      "entitlements": "entitlements.plist",
      "dmg": {
        "background": "dmg-background.png",
        "windowSize": {
          "width": 660,
          "height": 400
        },
        "appPosition": {
          "x": 180,
          "y": 200
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 200
        }
      }
    },
    "windows": {
      "wix": null
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
